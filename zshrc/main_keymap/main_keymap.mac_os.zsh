# shellcheck disable=SC2034 # Used by `main_keymap.zsh`
MAC_OS_KEYMAP=(
	'ctrl-<esc> # Read selected text (Custom)'
	'ctrl-<space> # Toggle Dvorak (Custom)'
	''
	'cmd-shift-3 # Capture the entire screen'
	'cmd-shift-4 # Capture a portion of the screen'
	'cmd-ctrl-shift-3 # Copy the entire screen to pasteboard'
	'cmd-ctrl-shift-4 # Copy a portion of the screen to pasteboard'
	''
	'cmd-ctrl-f # Toggle full screen'
	'cmd-ctrl-<space> # Show character viewer'
	''
	'cmd-alt-<esc> # Force quit applications'
)
